{
    "build": {
        "beforeDevCommand": "yarn dev",
        "beforeBuildCommand": "corepack yarn build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "Concordium Company ID",
        "version": "1.0.3"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "clipboard": {
                "all": false,
                "readText": false,
                "writeText": true
            }
        },
        "bundle": {
            "active": true,
            "targets": ["msi", "nsis", "dmg", "appimage"],
            "identifier": "com.concordium.companyid",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "Concordium Company ID",
                "width": 800,
                "height": 800
            }
        ]
    }
}
